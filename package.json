{
  "name": "docker-status-api",
  "private": true,
  "version": "1.2.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "coverage": "jest --coverage",
    "lint": "eslint src",
    "postversion": "node tools/buildAndPush.js",
    "prettier": "prettier --write ./**/*.{js,json,css,md}",
    "start": "node -r dotenv/config src",
    "test": "jest",
    "watch": "nodemon src -w src -x 'node -r dotenv/config'"
  },
  "author": "Rob Anderson (https://r0b.io)",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,less,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "api-formatter": "^1.0.1",
    "dockerode": "^2.5.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  }
}
