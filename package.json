{
  "name": "docker-status-api",
  "private": true,
  "version": "1.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "coverage": "jest --coverage",
    "lint": "eslint src",
    "postversion": "node tools/buildAndPush.js",
    "prettier": "prettier --write ./**/*.{js,json,css,md}",
    "start": "node -r dotenv/config src",
    "test": "jest",
    "watch": "nodemon src -w src -x 'node -r dotenv/config'"
  },
  "author": "Rob Anderson (https://r0b.io)",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,less,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "api-formatter": "^1.0.0",
    "dockerode": "^2.5.7",
    "dotenv": "^6.2.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3"
  }
}
